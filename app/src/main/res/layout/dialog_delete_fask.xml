<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutDeleteDialog"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:background="@color/todo_background_todo_app"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <EditText
        android:id="@+id/etCategoryName"
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content"
        android:hint="@string/todo_dialog_add_category"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>
    <LinearLayout
        android:id="@+id/layoutTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnAddTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/todo_dialog_category_button_delete"
        android:backgroundTint="@color/todo_delete_tasks"/>


</LinearLayout>